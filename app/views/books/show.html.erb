<%= render 'users/user_info', user: @book.user %>
<%= render 'books/new_book', book: @book_new %>

<h1>Book detail</h1>
<table>
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(@book.user.id) do %>
          <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><br>
          <%= @book.user.name %>
        <% end %>
      </td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <% if @book.user == current_user %>
      <td><%= link_to "Edit", edit_book_path(@book) %></td>
      <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sure?" %></td>
      <% end %>
    </tr>
  </tbody>
</table>



