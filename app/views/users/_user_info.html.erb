<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<table class="table">
	<tbody>
		<tr></tr>
		<tr>
			<th>name</td>
			<th><%= user.name %></td>
		</tr>
		<tr>
			<th>introduction</td>
			<th><%= user.introduction %></td>
		</tr>
	</tbody>
</table>
<div>
  <p><%= link_to "", edit_user_path(user), class: "btn btn-outline-secondary btn-block fas fa-user-cog " %></p>
</div>