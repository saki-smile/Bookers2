<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-5 mx-auto ">
 
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <h2>
          <%= pluralize(@user.errors.count,"error") %> prohibited this obj from being saved:
          </h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <label for="user_Name">Name</label><br>
          <%= f.text_field :name, autofocus: true, id: "user_Name", placeholder: "名前", class: "form-control name" %><br>
        </div>
        <div class="form-group">
          <label for="user_Image">Image</label><br>
          <%= f.attachment_field :profile_image, id: "user_profile_image", placeholder: "プロフィール画像", class: "form-control-file user_image" %><br>
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label><br>
          <%= f.text_area :introduction, class: "form-control introduction" %><br>
        </div>
        <div class="form-group">
          <%= f.submit"Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>