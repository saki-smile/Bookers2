<h2>User info</h2>
<% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2>
    <%= pluralize(@user.errors.count,"error") %> prohibited this obj from being saved:
    </h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label><br>
  <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "名前"%><br>

  <label for="inputImage">Image</label><br>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %><br>
  <label>Introduction</label><br>
  <%= f.text_area :introduction %><br>
  <%= f.submit "Update User" %>
<% end %>